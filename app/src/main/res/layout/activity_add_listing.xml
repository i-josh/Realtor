<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddListingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_listing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/colorAccent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_listing_toolbar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_listing_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:layout_margin="@dimen/edit_text_margin"
            android:hint="@string/location"
            android:textSize="@dimen/text_small" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout9">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_listing_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/edit_text_margin"
            android:hint="@string/description"
            android:textSize="@dimen/text_small" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputLayout11">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_listing_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/edit_text_margin"
            android:hint="@string/price"
            android:inputType="number"
            android:textSize="@dimen/text_small" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/add_images_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/add_images"
        android:gravity="center"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout10" />

    <ImageView
        android:id="@+id/listing_image_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_images_button"
        app:srcCompat="@drawable/ic_add_a_photo"
        android:contentDescription="@string/listing_image_1" />

    <ImageView
        android:id="@+id/listing_image_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/listing_image_1"
        app:layout_constraintTop_toBottomOf="@+id/add_images_button"
        app:srcCompat="@drawable/ic_add_a_photo"
        android:contentDescription="@string/listing_image_2" />

    <ImageView
        android:id="@+id/listing_image_3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/listing_image_2"
        app:layout_constraintTop_toBottomOf="@+id/add_images_button"
        app:srcCompat="@drawable/ic_add_a_photo"
        android:contentDescription="@string/listing_image_3" />

    <ImageView
        android:id="@+id/listing_image_4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listing_image_3"
        app:srcCompat="@drawable/ic_add_a_photo"
        android:contentDescription="@string/listing_image_4" />

    <ImageView
        android:id="@+id/listing_image_5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/listing_image_4"
        app:layout_constraintTop_toBottomOf="@id/listing_image_2"
        app:srcCompat="@drawable/ic_add_a_photo"
        android:contentDescription="@string/listing_image_5" />

    <Button
        android:id="@+id/submit_listing_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/submit"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listing_image_5" />

</androidx.constraintlayout.widget.ConstraintLayout>